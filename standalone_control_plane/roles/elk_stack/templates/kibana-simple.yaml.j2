apiVersion: apps/v1
kind: Deployment
metadata:
  name: kibana
  namespace: {{ elk_namespace }}
  labels:
    app: kibana
spec:
  replicas: {{ kibana_replicas | default(1) }}
  selector:
    matchLabels:
      app: kibana
  template:
    metadata:
      labels:
        app: kibana
    spec:
      securityContext:
        runAsUser: 1000
        fsGroup: 1000
      containers:
      - name: kibana
        image: docker.elastic.co/kibana/kibana:{{ kibana_version | default('8.5.1') }}
        env:
        - name: ELASTICSEARCH_HOSTS
          value: "https://{{ elasticsearch_cluster_name }}-master:9200"
        - name: ELASTICSEARCH_USERNAME
          value: "kibana_system"
        - name: ELASTICSEARCH_PASSWORD
          value: "{{ elastic_password | default('changeme') }}"
        - name: SERVER_BASEPATH
          value: "/kibana"
        - name: SERVER_REWRITEBASEPATH
          value: "true"
        - name: ELASTICSEARCH_SSL_VERIFICATIONMODE
          value: "certificate"
        - name: ELASTICSEARCH_SSL_CERTIFICATEAUTHORITIES
          value: "/usr/share/kibana/config/certs/ca.crt"
        - name: XPACK_SECURITY_ENABLED
          value: "true"
        - name: XPACK_SECURITY_ENCRYPTIONKEY
          value: "{{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') }}"
        - name: XPACK_REPORTING_ENCRYPTIONKEY
          value: "{{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') }}"
        - name: XPACK_ENCRYPTEDSAVEDOBJECTS_ENCRYPTIONKEY
          value: "{{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') }}"
        - name: NODE_OPTIONS
          value: "--max-old-space-size=1800"
        ports:
        - containerPort: 5601
        volumeMounts:
        - name: kibana-certificates
          mountPath: /usr/share/kibana/config/certs
          readOnly: true
        resources:
          requests:
            cpu: "{{ kibana_cpu_request | default('100m') }}"
            memory: "{{ kibana_memory_request | default('512Mi') }}"
          limits:
            cpu: "{{ kibana_cpu_limit | default('500m') }}"
            memory: "{{ kibana_memory_limit | default('1Gi') }}"
      volumes:
      - name: kibana-certificates
        secret:
          secretName: kibana-certificates
---
apiVersion: v1
kind: Service
metadata:
  name: kibana
  namespace: {{ elk_namespace }}
spec:
  ports:
  - port: 5601
    targetPort: 5601
    protocol: TCP
  selector:
    app: kibana
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: kibana
  namespace: {{ elk_namespace }}
spec:
  entryPoints:
    - web
  routes:
    - match: PathPrefix(`/kibana`)
      kind: Rule
      services:
        - name: kibana
          port: 5601