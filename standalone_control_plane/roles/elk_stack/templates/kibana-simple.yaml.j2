apiVersion: apps/v1
kind: Deployment
metadata:
  name: kibana
  namespace: {{ elk_namespace }}
  labels:
    app: kibana
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kibana
  template:
    metadata:
      labels:
        app: kibana
    spec:
      containers:
      - name: kibana
        image: docker.elastic.co/kibana/kibana:{{ kibana_version | default('8.5.1') }}
        env:
        - name: SERVER_NAME
          value: "kibana"
        - name: SERVER_PORT
          value: "5601"
        - name: SERVER_HOST
          value: "0.0.0.0"
        - name: SERVER_BASEPATH
          value: "/kibana"
        - name: SERVER_REWRITEBASEPATH
          value: "true"
        - name: ELASTICSEARCH_HOSTS
          value: "https://{{ elasticsearch_cluster_name }}-master:9200"
        - name: ELASTICSEARCH_USERNAME
          value: "kibana_system"
        - name: ELASTICSEARCH_PASSWORD
          value: "{{ elastic_password }}"
        - name: ELASTICSEARCH_SSL_VERIFICATIONMODE
          value: "none"
        - name: ELASTICSEARCH_SSL_CERTIFICATEAUTHORITIES
          value: "/usr/share/kibana/config/certs/ca.crt"
        - name: XPACK_SECURITY_ENABLED
          value: "true"
        - name: XPACK_SECURITY_ENCRYPTIONKEY
          value: "thisis32bitlongpaddedsecuritykey!"
        - name: XPACK_REPORTING_ENCRYPTIONKEY
          value: "thisis32bitlongpaddedreportingkey!"
        - name: XPACK_ENCRYPTEDSAVEDOBJECTS_ENCRYPTIONKEY
          value: "thisis32bitlongpaddedobjectskey!"
        - name: LOGGING_ROOT_LEVEL
          value: "error"  # Only show errors
        resources:
          limits:
            cpu: "1"
            memory: "1Gi"
          requests:
            cpu: "500m"
            memory: "512Mi"
        ports:
        - containerPort: 5601
        volumeMounts:
        - name: kibana-certificates
          mountPath: /usr/share/kibana/config/certs
          readOnly: true
      volumes:
      - name: kibana-certificates
        secret:
          secretName: kibana-certificates
---
apiVersion: v1
kind: Service
metadata:
  name: kibana
  namespace: {{ elk_namespace }}
spec:
  ports:
  - port: 5601
    targetPort: 5601
  selector:
    app: kibana
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: kibana
  namespace: {{ elk_namespace }}
spec:
  entryPoints:
    - web
  routes:
    - match: PathPrefix(`/kibana`)
      kind: Rule
      services:
        - name: kibana
          port: 5601